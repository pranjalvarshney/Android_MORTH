<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:background="#003366"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Projects"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rellay2"
        android:layout_below="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rellay3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:elevation="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_request_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_projectName"
            android:text="NH-24 Maintenence"
            android:textStyle="bold"
            android:textColor="#00042e"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_start_date"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_projectName"
            android:layout_width="wrap_content"
            android:text="Start date: 01-01-2019"
            android:textSize="14sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#272727"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_start_date"
            android:layout_width="wrap_content"
            android:text="End date: 12-02-2019"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#272727"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rellay_eot_request"
            android:layout_below="@id/tv_end_date"
            android:background="@drawable/bg_eot_request"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/btn_previousEOT"
                android:text="@string/previous_eot_requests"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>