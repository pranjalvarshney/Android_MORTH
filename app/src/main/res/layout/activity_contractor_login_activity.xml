<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".Contractor_login_activity">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rellay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_app_logo_login"
                android:src="@drawable/emblem"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/tv_app_title_1"
                android:paddingTop="10dp"
                android:layout_below="@id/iv_app_logo_login"
                android:text="Ministry of Road Transport and Highways"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_app_title_2"
                android:layout_below="@id/tv_app_title_1"
                android:layout_centerHorizontal="true"
                android:text="Time Extention Request System"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellay3"
            android:layout_width="326dp"
            android:layout_height="456dp"
            android:layout_below="@id/rellay2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_builder_logo_1"
            android:paddingTop="30dp">


            <TextView
                android:id="@+id/tv_contractor_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:text="Contractor Login"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_project_id"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/tv_contractor_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/login_field_bg"
                android:drawableStart="@drawable/ic_account_circle_black_24dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="5dp"
                android:hint="Project ID"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_project_password"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_below="@id/et_project_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_field_bg"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_project_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="Log In"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/btn_supervisor_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/btn_supervisor_transparent_bg"
                android:text="Login as Supervisor"
                android:textColor="#33b5ff"
                android:textSize="12sp" />


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>