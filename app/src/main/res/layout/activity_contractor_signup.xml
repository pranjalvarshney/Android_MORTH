<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".Contractor_signup">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rellay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_app_logo_login"
                android:src="@drawable/emblem"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/tv_app_title_1"
                android:paddingTop="10dp"
                android:layout_below="@id/iv_app_logo_login"
                android:text="Ministry of Road Transport and Highways"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_app_title_2"
                android:layout_below="@id/tv_app_title_1"
                android:layout_centerHorizontal="true"
                android:text="Time Extention Request System"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellay3"
            android:layout_width="389dp"
            android:layout_height="557dp"
            android:layout_below="@id/rellay2"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/login_builder_logo_1"
            android:paddingTop="30dp">


            <TextView
                android:id="@+id/tv_contractor_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:text="Contractor Sign Up"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/tv_contractor_signup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_field_bg"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"
                android:hint="E-mail"
                android:inputType="textPassword"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/et_project_password"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/et_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_field_bg"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/et_project_id"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/et_project_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_field_bg"
                android:drawableStart="@drawable/ic_account_circle_black_24dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Project ID"
                android:inputType="text"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/et_project_location"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/et_project_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_field_bg"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Project Location"
                android:inputType="textPassword"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/et_project_start_date"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/et_project_location"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_field_bg"
                android:drawableStart="@drawable/ic_event_black_24dp"
                android:drawableLeft="@drawable/ic_event_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Project Start Date"
                android:inputType="textPassword"
                android:paddingLeft="5dp" />

            <EditText
                android:id="@+id/et_project_duration"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/et_project_start_date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_field_bg"
                android:drawableStart="@drawable/ic_event_note_black_24dp"
                android:drawableLeft="@drawable/ic_event_note_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Project Duration"
                android:inputType="textPassword"
                android:paddingLeft="5dp" />

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_project_duration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="Sign Up"
                android:textColor="#ffffff" />


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>