<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rellay0"
            android:background="#003366"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Dashboard"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rellay2"
            android:layout_below="@id/rellay0"
            android:layout_width="286dp"
            android:layout_height="286dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/calender_1">

            <TextView
                android:id="@+id/tv_no_of_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="130dp"
                android:textColor="#323232"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="80sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellay3"
            android:layout_below="@+id/rellay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/no_of_days_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:textColor="#333333"
                android:text="No. of days Left" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rellay4"
            android:paddingTop="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/login_field_bg"
            android:elevation="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/rellay3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/et_project_id"
                        android:textSize="15sp"
                        android:textColor="#272727"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"

                android:layout_marginTop="5dp"
                android:layout_below="@+id/linear1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/et_project_name"
                    android:textSize="15sp"
                    android:textColor="#272727"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_marginTop="5dp"
                android:layout_below="@id/linear2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/et_contractor_name"
                    android:textSize="15sp"
                    android:textColor="#272727"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_marginTop="5dp"
                android:layout_below="@id/linear3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/et_project_location"
                    android:textSize="15sp"
                    android:textColor="#272727"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear5"
                android:layout_marginTop="5dp"
                android:layout_below="@id/linear4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/et_start_date"
                    android:textSize="15sp"
                    android:textColor="#272727"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear6"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/linear5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/et_end_date"
                    android:textSize="15sp"
                    android:textColor="#272727"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellay5"
            android:paddingTop="20dp"
            android:layout_below="@id/rellay4"
            android:layout_width="match_parent"
            android:paddingBottom="30dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_eot_history"
                android:text="EOT History"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:background="@drawable/login_btn_bg"
                android:textColor="#ffffff"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>